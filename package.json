{
  "name": "nxdownloader",
  "version": "2.0.0",
  "main": "index.js",
  "type": "commonjs",
  "private": true,
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "Just1diaxx",
        "repo": "nxdownloader"
      }
    ],
    "appId": "com.just.nxdownloader",
    "productName": "NXDownloader",
    "files": [
      "index.js",
      "src/**/*",
      "!node_modules/.bin",
      "!node_modules/electron*",
      "!**/*.map"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/logo.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/logo.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/logo.png"
    }
  },
  "dependencies": {
    "axios": "^1.13.2",
    "cheerio": "^1.1.2",
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12"
  }
}